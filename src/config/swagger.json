{
  "swagger": "2.0",
  "info": {
    "title": "app",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http"],
  "produces": ["application/json"],
  "paths": {
    "/auth/login": {
      "post": {
        "summary": "Login a user",
        "responses": {
          "200": {
            "description": "An authorization token"
          },
          "400": {
            "description": "Bad request"
          }
        },
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "User that needs to be logged in",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ]
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    }
  }
}

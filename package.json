{
   "name": "confi",
   "version": "0.0.1",
   "description": "A comfy conference booking system",
   "scripts": {
      "postinstall": "tsc -p ./",
      "start": "ts-node-dev --respawn --transpileOnly ./src/index.ts",
      "debug": "ts-node-dev --inspect --respawn --transpileOnly ./src/index.ts",
      "watch": "tsc -w -p ./",
      "docker:debug": "docker-compose -f docker-compose.debug.yml up --build",
      "docker:test": "docker-compose -f docker-compose.test.yml up --build --exit-code-from sut",
      "prod": "tsc && node ./build/index.js",
      "test": "mocha -r ts-node/register src/**/*.test.ts --exit"
   },
   "devDependencies": {
      "@types/bcryptjs": "^2.4.2",
      "@types/body-parser": "^1.17.0",
      "@types/chai": "^4.1.7",
      "@types/cors": "^2.8.4",
      "@types/helmet": "0.0.43",
      "@types/jsonwebtoken": "^8.3.2",
      "@types/mocha": "^5.2.6",
      "@types/node": "^8.0.29",
      "@types/nodemailer": "^4.6.7",
      "@types/swagger-ui-express": "^3.0.0",
      "chai": "^4.2.0",
      "mocha": "^6.0.2",
      "nodemon": "^1.18.10",
      "supertest": "^4.0.2",
      "ts-node": "^8.0.3",
      "ts-node-dev": "^1.0.0-pre.32",
      "typescript": "^3.3.4000"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "body-parser": "^1.18.1",
      "class-validator": "^0.9.1",
      "dotenv": "^7.0.0",
      "express": "^4.15.4",
      "jsonwebtoken": "^8.5.1",
      "nodemailer": "^6.0.0",
      "pg": "^7.3.0",
      "reflect-metadata": "^0.1.10",
      "swagger-ui-express": "^4.0.2",
      "typeorm": "^0.2.14"
   },
   "engines": {
      "node": ">=8.0.0 <11.0.0"
   }
}
